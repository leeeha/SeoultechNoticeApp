<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.seoultechnoticeapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"

        android:allowBackup="true"
        android:icon="@drawable/mark"
        android:label="서울과기대 공지사항 알리미"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WebCrawling">

        <activity
            android:name="com.mobile.seoultechnoticeapp.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mobile.seoultechnoticeapp.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="com.mobile.seoultechnoticeapp.NoticeActivity"/>

        <activity
            android:name="com.mobile.seoultechnoticeapp.KeywordActivity"/>

        <activity
            android:name="com.mobile.seoultechnoticeapp.AuthorActivity"/>

    </application>

</manifest>